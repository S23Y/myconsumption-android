<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="openSpinner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="@string/text_sensor_spinner"
        android:textColor="@color/navdrawer_background" />

    <Spinner style="@style/Widget.MyConsumption.HeaderBar.Spinner"
        android:id="@+id/actionbar_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:popupBackground="@color/theme_primary_dark"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_drawer_accounts_expand" />
</LinearLayout>
